{
  "name": "matcha",
  "version": "0.0.0",
  "description": "Matcha-ts: Simple learning-oriented typescript CLI",
  "main": "index.js",
  "scripts": {
    "build": "tsc && chmod +x dist/src/index.js && pkg .",
    "test": "tsc && vitest run",
    "docs": "typedoc",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'"
  },
  "bin": {
    "matcha": "dist/src/index.js"
  },
  "pkg": {
    "scripts": "dist/src/**/*.js",
    "targets": [
      "node16-win-x64",
      "node16-mac-x64",
      "node16-linux-x64"
    ],
    "outputPath": "bin"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "typescript": "^5.5.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.8.0",
    "pkg": "^5.8.1",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.4",
    "typescript-eslint": "^7.16.0",
    "vitest": "^2.0.2"
  }
}
